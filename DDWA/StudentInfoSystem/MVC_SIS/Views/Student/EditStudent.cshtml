@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Student</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="col-xs-12 col-sm-9">
    <div class="row">
        <div class="col-xs-12">
            <h3>Edit Student</h3>
            <div class="row">
                @using (Html.BeginForm("EditStudent", "Student", FormMethod.Post))
                {
                    <div class="col-xs-12 col-sm-7">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h4 class="panel-title">Personal Details</h4>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label>First Name:</label>
                                    @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", required = true })
                                    @Html.ValidationMessageFor(m => m.Student.FirstName)
                                </div>
                                <div class="form-group">
                                    <label>Last Name:</label>
                                    @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", required = true })
                                    @Html.ValidationMessageFor(m => m.Student.LastName)
                                </div>
                                <div class="form-group">
                                    <label>Major:</label>
                                    @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control", required = true })
                                    @Html.ValidationMessageFor(m => m.Student.Major.MajorId)
                                </div>
                                <div class="form-group">
                                    <label>GPA:</label>
                                    @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", required = true, pattern = @"\d\.\d\d", title = "Please use X.XX" })
                                    @Html.ValidationMessageFor(m => m.Student.GPA)
                                </div>
                                <h4>Courses</h4>
                                <div class="form-group">
                                    @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary">Save</button>
                    </div>
                    @Html.HiddenFor(m => m.Student.StudentId);
                    <div class="col-xs-12 col-sm-5">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h4 class="panel-title">Address</h4>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label>Address Line 1:</label>
                                    @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Address Line 2:</label>
                                    @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>City:</label>
                                    @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>State:</label>
                                    @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, "-Choose One-", new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Zip:</label>
                                    @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>   